import tkinter as tk

def saludar():

nombre=entrada.get()
edad=entrada_edad.get()

etiqueta_resultado.config(text=f"Hola (nombre), tienes (edad) aÃ±os")

ventana=tk.Tk()
ventana.title("Mi primer app grafica")
ventana.geometry("400*200")

etiqueta=tk.Label(ventana, text="Ingresa tu nombre:")
etiqueta_nombre.pack()

entrada_edad=tk.Entry(ventana)
entrada_edad.pack()

boton=tk.Button(ventana, text="Mostrar Saludo", command=saludar)
boton.pack()

etiqueta_resultado=tk.Label(ventana, text="")
etiqueta_resultado.pack()

ventana.mainloop()
